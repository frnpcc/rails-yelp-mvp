<h1>Add a restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.submit class: "btn btn-primary mb-2"%>
<% end %>

<%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
