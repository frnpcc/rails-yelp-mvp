<h2><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>

<p><strong>Add a review for <%= @restaurant.name %> 👇</strong></h2>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary mb-2"%>
<% end %>

<p><strong>Reviews ⭐️</strong></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
    <%= review.content %> |
    <%= review.rating %> stars out of 5
    </li>
    <% end %>
</ul>

<%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
