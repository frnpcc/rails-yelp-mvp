<h1>New review for <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary mb-2"%>
<% end %>

<%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-primary" %>
